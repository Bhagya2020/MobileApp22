<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/TxtAssingCaseName"
        android:layout_width="match_parent"
        android:text="Travelling Distance Update"
        android:textStyle="bold"
        android:layout_alignParentTop="true"
        android:layout_marginTop="3dp"
        android:textSize="15dp"
        android:gravity="center"
        android:background="#740966"
        android:fontFamily="@font/arial"
        android:textColor="#FFF"
        android:layout_height="40dp"
        />

    <TextView
        android:id="@+id/TxtAssingFacno"
        android:layout_width="match_parent"
        android:text="Facility No - HLELE19201844788"
        android:textStyle="bold"
        android:layout_alignParentTop="true"
        android:layout_marginTop="48dp"
        android:textSize="15dp"
        android:gravity="center"
        android:background="@drawable/edittextdesign"
        android:fontFamily="@font/arial"
        android:textColor="#740966"
        android:layout_height="40dp"
        />

    <ScrollView
        android:id="@+id/scrollView2"
        android:layout_width="match_parent"
        android:layout_height="530dp"
        android:layout_alignParentTop="true"
        android:layout_marginTop="100dp"
        >

        <LinearLayout
            android:layout_width="320dp"
            android:layout_height="450dp"
            android:orientation="vertical">

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:layout_marginTop="15dp">

                <TextView
                    android:layout_width="200dp"
                    android:layout_height="30dp"
                    android:textSize="15sp"
                    android:gravity="center_vertical"
                    android:layout_marginLeft="12dp"
                    android:fontFamily="@font/arial"
                    android:text="Allowance for 1km"
                    />

                <EditText
                    android:id="@+id/TxtAllow1km"
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:textSize="15dp"
                    android:inputType="numberDecimal"
                    android:background="@drawable/recoveryedittexyt"
                    android:paddingLeft="5dp"
                    android:fontFamily="@font/arial"
                    >
                </EditText>
            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="35dp"
               >

                <TextView
                    android:layout_width="200dp"
                    android:layout_height="30dp"
                    android:textSize="15sp"
                    android:gravity="center_vertical"
                    android:layout_marginLeft="12dp"
                    android:fontFamily="@font/arial"
                    android:text="Food allowance"
                    />

                <EditText
                    android:id="@+id/TxtFoodAllowance"
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:textSize="15dp"
                    android:inputType="numberDecimal"
                    android:paddingLeft="5dp"
                    android:background="@drawable/recoveryedittexyt"
                    android:fontFamily="@font/arial"
                    >
                </EditText>
            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="35dp"
                >

                <TextView
                    android:layout_width="200dp"
                    android:layout_height="30dp"
                    android:textSize="15sp"
                    android:gravity="center_vertical"
                    android:layout_marginLeft="12dp"
                    android:fontFamily="@font/arial"
                    android:text="Total Distance Travelled"
                    />

                <EditText
                    android:id="@+id/TxtTotDistance"
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:textSize="15dp"
                    android:paddingLeft="5dp"
                    android:inputType="numberDecimal"
                    android:background="@drawable/recoveryedittexyt"
                    android:fontFamily="@font/arial"
                    >
                </EditText>
            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="35dp"
                >

                <TextView
                    android:layout_width="200dp"
                    android:layout_height="30dp"
                    android:textSize="15sp"
                    android:gravity="center_vertical"
                    android:layout_marginLeft="12dp"
                    android:fontFamily="@font/arial"
                    android:text="Date Travelled"
                    />

                <TextView
                    android:id="@+id/TxtDateTraveld"
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:textSize="15dp"
                    android:background="@drawable/recoveryedittexyt"
                    android:fontFamily="@font/arial"
                    >
                </TextView>
            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="35dp"
                >

                <TextView
                    android:layout_width="200dp"
                    android:layout_height="30dp"
                    android:textSize="15sp"
                    android:gravity="center_vertical"
                    android:layout_marginLeft="12dp"
                    android:fontFamily="@font/arial"
                    android:text="In Time"
                    />

                <TextView
                    android:id="@+id/TxtinTime"
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:textSize="15dp"
                    android:background="@drawable/recoveryedittexyt"
                    android:fontFamily="@font/arial"
                    >
                </TextView>
            </TableRow>


            <TableRow
                android:layout_width="match_parent"
                android:layout_height="35dp"
               >

                <TextView
                    android:layout_width="200dp"
                    android:layout_height="30dp"
                    android:textSize="15sp"
                    android:gravity="center_vertical"
                    android:layout_marginLeft="12dp"
                    android:fontFamily="@font/arial"
                    android:text="Out Time"
                    />

                <TextView
                    android:id="@+id/TxtOutTime"
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:textSize="15dp"
                    android:background="@drawable/recoveryedittexyt"
                    android:fontFamily="@font/arial"
                    >
                </TextView>
            </TableRow>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="10dp"
                android:layout_alignParentBottom="true"
                android:layout_marginBottom="20dp"
                >

                <Button
                    android:id="@+id/btnSave"
                    android:layout_width="150dp"
                    android:layout_height="40dp"
                    android:layout_alignParentTop="true"
                    android:layout_marginLeft="5dp"
                    android:layout_marginTop="5dp"
                    android:background="#720b98"
                    android:fontFamily="@font/arial"
                    android:text="Save"
                    android:textAllCaps="false"
                    android:textColor="#FFF"
                    android:textSize="15sp" />

                <Button
                    android:id="@+id/btnclear"
                    android:layout_width="150dp"
                    android:layout_height="40dp"
                    android:layout_marginLeft="170dp"
                    android:layout_alignParentTop="true"
                    android:layout_marginTop="5dp"
                    android:background="#720b98"
                    android:textAllCaps="false"
                    android:text="CLEAR"
                    android:textSize="15sp"
                    android:fontFamily="@font/arial"
                    android:textColor="#FFF"
                    />

            </RelativeLayout>

        </LinearLayout>
    </ScrollView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="280dp"
        android:orientation="vertical"
        android:layout_alignParentTop="true"
        android:layout_marginTop="400dp"
        >

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/ReyDetailslist"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="5dp">

        </androidx.recyclerview.widget.RecyclerView>
    </LinearLayout>






</RelativeLayout>