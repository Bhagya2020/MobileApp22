<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Setting">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/imageView10"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:scaleType="fitXY"
                android:src="@drawable/hedingdesign"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/textView14"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginLeft="10dp"
                android:fontFamily="@font/arial"
                android:gravity="center_vertical"
                android:text="SETTINGS"
                android:textColor="#FFFF"
                android:textSize="20dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintStart_toEndOf="@+id/imageView10"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/TxtDataSts"
                android:layout_width="80dp"
                android:layout_height="20dp"
                android:gravity="center_vertical"
                android:text="OFFLINE"
                android:textColor="#FFF"
                android:textSize="13dp"
                app:layout_constraintBottom_toBottomOf="@+id/imageView10"
                app:layout_constraintEnd_toEndOf="@+id/imageView10"
                app:layout_constraintTop_toTopOf="@+id/imageView10" />
        </androidx.constraintlayout.widget.ConstraintLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="5dp"
        android:orientation="vertical"
        android:paddingLeft="10dp"
        android:paddingRight="10dp">

        <androidx.core.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:fillViewport="true">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:orientation="vertical">

                    <TableRow
                        android:id="@+id/tableRow2"
                        android:layout_width="match_parent"
                        android:layout_height="30dp"
                        android:layout_marginBottom="2dp">

                        <TextView
                            android:layout_width="135dp"
                            android:layout_height="30dp"
                            android:layout_gravity="center_vertical"
                            android:background="@drawable/fildesign"
                            android:cursorVisible="true"
                            android:fontFamily="@font/arial"
                            android:gravity="center_vertical"
                            android:inputType="textCapCharacters"
                            android:paddingLeft="10dp"
                            android:text="NAME"
                            android:textColor="#FFF"
                            android:textSize="13dp"
                            app:textAllCaps="true" />

                        <EditText
                            android:id="@+id/txtFULLYNAME"
                            android:layout_width="wrap_content"
                            android:layout_height="30dp"
                            android:layout_alignTop="@+id/tableRow2"
                            android:layout_gravity="center_vertical"
                            android:layout_marginLeft="3dp"
                            android:background="@drawable/approve_edittxt"
                            android:fontFamily="@font/arial"
                            android:paddingLeft="10dp"
                            android:textColor="#9D9BA2"
                            android:textSize="13dp" />


                    </TableRow>

                    <TableRow
                        android:id="@+id/tableRow4"
                        android:layout_width="match_parent"
                        android:layout_height="30dp"
                        android:layout_marginBottom="2dp">

                        <TextView
                            android:layout_width="135dp"
                            android:layout_height="30dp"
                            android:background="@drawable/fildesign"
                            android:cursorVisible="true"
                            android:fontFamily="@font/arial"
                            android:gravity="center_vertical"
                            android:inputType="textCapCharacters"
                            android:paddingLeft="10dp"
                            android:text="EPF-NO"
                            android:textColor="#FFF"
                            android:textSize="13dp"
                            app:textAllCaps="true" />

                        <EditText
                            android:id="@+id/txtEPFNO"
                            android:layout_width="wrap_content"
                            android:layout_height="30dp"
                            android:layout_gravity="center_vertical"
                            android:layout_marginLeft="3dp"
                            android:background="@drawable/approve_edittxt"
                            android:fontFamily="@font/arial"
                            android:paddingLeft="5dp"
                            android:textColor="#9D9BA2"
                            android:textSize="13dp" />
                    </TableRow>

                    <TableRow
                        android:id="@+id/tableRow3"
                        android:layout_width="match_parent"
                        android:layout_height="30dp"
                        android:layout_marginBottom="2dp">

                        <TextView
                            android:layout_width="135dp"
                            android:layout_height="30dp"
                            android:background="@drawable/fildesign"
                            android:cursorVisible="true"
                            android:fontFamily="@font/arial"
                            android:gravity="center_vertical"
                            android:inputType="textCapCharacters"
                            android:paddingLeft="10dp"
                            android:text="NIC"
                            android:textColor="#FFF"
                            android:textSize="13dp"
                            app:textAllCaps="true" />

                        <EditText
                            android:id="@+id/txtNIC"
                            android:layout_width="wrap_content"
                            android:layout_height="30dp"
                            android:layout_marginLeft="3dp"
                            android:background="@drawable/approve_edittxt"
                            android:fontFamily="@font/arial"
                            android:paddingLeft="5dp"
                            android:textColor="#9D9BA2"
                            android:textSize="13dp" />
                    </TableRow>

                    <TableRow
                        android:id="@+id/tableRow5"
                        android:layout_width="match_parent"
                        android:layout_height="30dp"
                        android:layout_marginBottom="2dp">

                        <TextView
                            android:layout_width="135dp"
                            android:layout_height="30dp"
                            android:background="@drawable/fildesign"
                            android:cursorVisible="true"
                            android:fontFamily="@font/arial"
                            android:gravity="center_vertical"
                            android:inputType="textCapCharacters"
                            android:paddingLeft="10dp"
                            android:text="BRANCH"
                            android:textColor="#FFF"
                            android:textSize="13dp"
                            app:textAllCaps="true" />

                        <EditText
                            android:id="@+id/txtBranch"
                            android:layout_width="wrap_content"
                            android:layout_height="30dp"
                            android:layout_alignTop="@+id/tableRow4"
                            android:layout_gravity="center_vertical"
                            android:layout_marginLeft="3dp"
                            android:background="@drawable/edittextdesign"
                            android:fontFamily="@font/arial"
                            android:paddingLeft="5dp"
                            android:textColor="#9D9BA2"
                            android:textSize="13dp" />
                    </TableRow>

                    <TableRow
                        android:id="@+id/tableRow10"
                        android:layout_width="match_parent"
                        android:layout_height="30dp"
                        android:layout_marginBottom="2dp">

                        <TextView
                            android:layout_width="135dp"
                            android:layout_height="30dp"
                            android:background="@drawable/fildesign"
                            android:cursorVisible="true"
                            android:fontFamily="@font/arial"
                            android:gravity="center_vertical"
                            android:inputType="textCapCharacters"
                            android:paddingLeft="10dp"
                            android:text="PHONE NO"
                            android:textColor="#FFF"
                            android:textSize="13dp"
                            app:textAllCaps="true" />

                        <EditText
                            android:id="@+id/txtPHONENO"
                            android:layout_width="wrap_content"
                            android:layout_height="30dp"
                            android:layout_marginLeft="3dp"
                            android:background="@drawable/edittextdesign"
                            android:fontFamily="@font/arial"
                            android:paddingLeft="5dp"
                            android:textColor="#9D9BA2"
                            android:textSize="13dp" />
                    </TableRow>

                    <TableRow
                        android:id="@+id/tableRow50"
                        android:layout_width="match_parent"
                        android:layout_height="30dp"
                        android:layout_marginBottom="2dp">

                        <TextView
                            android:layout_width="135dp"
                            android:layout_height="30dp"
                            android:background="@drawable/fildesign"
                            android:cursorVisible="true"
                            android:fontFamily="@font/arial"
                            android:gravity="center_vertical"
                            android:inputType="textCapCharacters"
                            android:paddingLeft="10dp"
                            android:text="USER ID"
                            android:textColor="#FFF"
                            android:textSize="13dp"
                            app:textAllCaps="true" />

                        <EditText
                            android:id="@+id/txtUSERID"
                            android:layout_width="wrap_content"
                            android:layout_height="30dp"
                            android:layout_alignTop="@+id/tableRow4"
                            android:layout_marginLeft="3dp"
                            android:background="@drawable/approve_edittxt"
                            android:fontFamily="@font/arial"
                            android:paddingLeft="5dp"
                            android:textColor="#9D9BA2"
                            android:textSize="13dp" />
                    </TableRow>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <ImageView
                            android:id="@+id/imgProfilePic"
                            android:layout_width="150dp"
                            android:layout_height="150dp"
                            android:background="@drawable/edittextdesign"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent" />
                    </androidx.constraintlayout.widget.ConstraintLayout>
                </LinearLayout>

            </LinearLayout>
        </androidx.core.widget.NestedScrollView>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:layout_marginBottom="5dp"
            android:foregroundGravity="bottom"
            android:gravity="bottom"
            android:orientation="vertical">

            <Button
                android:id="@+id/btnmaspteupdate"
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:layout_marginBottom="2dp"
                android:background="@drawable/normalbutton"
                android:fontFamily="@font/arial"
                android:foreground="?android:attr/selectableItemBackground"
                android:text="Master Update"
                android:textAllCaps="true"
                android:textColor="#FFF"
                android:textSize="15dp" />

            <Button
                android:id="@+id/btnchangepic"
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:background="@drawable/normalbutton"
                android:fontFamily="@font/arial"
                android:foreground="?android:attr/selectableItemBackground"
                android:text="Change Picture"
                android:textAllCaps="true"
                android:textColor="#FFF"
                android:textSize="15dp" />
        </LinearLayout>

    </LinearLayout>


</LinearLayout>