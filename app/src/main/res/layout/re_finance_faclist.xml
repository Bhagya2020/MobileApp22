<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="240dp"
    android:padding="10dp"
    android:clickable="true"
    android:focusable="true"
    android:background="#FFF"
    card_view:cardElevation="0dp">


    <RelativeLayout
        android:id="@+id/facrelative"
        android:layout_width="match_parent"
        android:layout_height="240dp"
        android:layout_margin="2dp"
        android:background="@drawable/recovery_recycleview"
        >

        <TextView
            android:id="@+id/TxtRecoveryFacno"
            android:layout_width="170dp"
            android:layout_height="30dp"
            android:layout_alignParentTop="true"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="5dp"
            android:fontFamily="@font/arial"
            android:text="HOLELE1900005125"
            android:textSize="15dp"
            android:textColor="#FF0000"
            android:textStyle="bold"
            />

        <TextView
            android:id="@+id/TxtRecoveryArrAmt"
            android:layout_width="140dp"
            android:layout_height="30dp"
            android:fontFamily="@font/arial"
            android:layout_alignParentTop="true"
            android:layout_marginTop="33dp"
            android:layout_marginLeft="5dp"
            android:background="@drawable/fildesign"
            android:textAlignment="center"
            android:textSize="15dp"
            android:textColor="#FFF"
            android:textStyle="bold"
            />



        <TextView
            android:id="@+id/TxtREcoveryFullyName"
            android:layout_width="370dp"
            android:layout_height="30dp"
            android:fontFamily="@font/arial"
            android:layout_alignParentTop="true"
            android:layout_marginTop="65dp"
            android:gravity="center_vertical"
            android:text="Bhagya Neranjana"
            android:layout_marginLeft="5dp"
            android:textSize="15dp"
            android:textColor="#FF0000"
            android:textStyle="bold"
            />

        <TextView
            android:id="@+id/Txtview1"
            android:layout_width="110dp"
            android:layout_height="30dp"
            android:fontFamily="@font/arial"
            android:layout_alignParentTop="true"
            android:layout_marginTop="90dp"
            android:layout_marginLeft="5dp"
            android:text="Product Type :"
            android:textSize="15dp"
            android:textColor="#AD386D"
            android:textStyle="bold"
            />

        <TextView
            android:id="@+id/TxtRecoveryproduct"
            android:layout_width="240dp"
            android:layout_height="30dp"
            android:fontFamily="@font/arial"
            android:layout_alignParentTop="true"
            android:layout_marginTop="90dp"
            android:layout_marginLeft="120dp"
            android:textSize="15dp"
            android:textColor="#AD386D"
            android:textStyle="bold"
            />

        <TextView
            android:id="@+id/Txtview2"
            android:layout_width="110dp"
            android:layout_height="30dp"
            android:fontFamily="@font/arial"
            android:layout_alignParentTop="true"
            android:layout_marginTop="115dp"
            android:layout_marginLeft="5dp"
            android:text="Vehicle No :"
            android:textSize="15dp"
            android:textColor="#AD386D"
            android:textStyle="bold"
            />

        <TextView
            android:id="@+id/TxtRecoveryVehNo"
            android:layout_width="240dp"
            android:layout_height="30dp"
            android:fontFamily="@font/arial"
            android:layout_alignParentTop="true"
            android:layout_marginTop="115dp"
            android:layout_marginLeft="120dp"
            android:textSize="15dp"
            android:textColor="#AD386D"
            android:textStyle="bold"
            />

        <TextView
            android:id="@+id/Txtview3"
            android:layout_width="120dp"
            android:layout_height="30dp"
            android:fontFamily="@font/arial"
            android:layout_alignParentTop="true"
            android:layout_marginTop="140dp"
            android:layout_marginLeft="5dp"
            android:text="Facility Amount   :"
            android:textSize="15dp"
            android:textColor="#AD386D"
            android:textStyle="bold"
            />

        <TextView
            android:id="@+id/TxtlastPaidAmt"
            android:layout_width="125dp"
            android:layout_height="30dp"
            android:fontFamily="@font/arial"
            android:layout_alignParentTop="true"
            android:layout_marginTop="140dp"
            android:layout_marginLeft="135dp"
            android:textSize="15dp"
            android:textColor="#AD386D"
            android:textStyle="bold"
            />


    </RelativeLayout>


    <RelativeLayout
        android:layout_width="385dp"
        android:layout_height="60dp"
        android:layout_marginTop="170dp"
        >


        <ImageButton
        android:id="@+id/Imgselect"
        android:layout_width="55dp"
        android:layout_height="55dp"
        android:scaleType="fitXY"
        android:layout_marginTop="7dp"
        android:adjustViewBounds="true"
        android:tooltipText="View Details"
        android:layout_marginLeft="10dp"
        android:src="@drawable/selectapp"
        android:background="@drawable/loginimageback"
        />

    </RelativeLayout>

</androidx.cardview.widget.CardView>