<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#FFF"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/imageView10"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:scaleType="fitXY"
        android:src="@drawable/hedingdesign"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginLeft="10dp"
        android:fontFamily="@font/arial"
        android:gravity="center_vertical"
        android:text="RMV LIST UPDATE"
        android:textColor="#FFFF"
        android:textSize="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/imageView10"
        app:layout_constraintTop_toTopOf="parent" />


    <RelativeLayout
        android:id="@+id/relativeLayout2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="60dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TableRow
            android:id="@+id/tableRow1"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="10dp">

            <TextView
            android:layout_width="135dp"
            android:layout_height="30dp"
            android:background="@drawable/rmv_fil_design"
            android:fontFamily="@font/arial"
            android:gravity="center_vertical"
            android:paddingLeft="10dp"
            android:text="Vehicle No"
            android:textColor="#68156B"
            android:textSize="13dp"
            app:textAllCaps="true" />

            <TextView
                android:id="@+id/txtregno"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:background="@drawable/rmv_display"
                android:fontFamily="@font/arial"
                android:gravity="center_vertical"
                android:paddingLeft="10dp"
                android:layout_marginLeft="3dp"
                android:textStyle="bold"
                android:text="Vehicle No"
                android:textColor="#FFF"
                android:textSize="13dp"
                app:textAllCaps="true" />


        </TableRow>

        <TableRow
            android:id="@+id/tableRow2"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="43dp">

            <TextView
                android:layout_width="135dp"
                android:layout_height="30dp"
                android:background="@drawable/rmv_fil_design"
                android:fontFamily="@font/arial"
                android:gravity="center_vertical"
                android:paddingLeft="10dp"
                android:text="Engine No"
                android:textColor="#68156B"
                android:textSize="13dp"
                app:textAllCaps="true" />

            <TextView
                android:id="@+id/txtengno"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:background="@drawable/rmv_display"
                android:fontFamily="@font/arial"
                android:gravity="center_vertical"
                android:paddingLeft="10dp"
                android:textStyle="bold"
                android:layout_marginLeft="3dp"
                android:text="Vehicle No"
                android:textColor="#FFF"
                android:textSize="13dp"
                app:textAllCaps="true" />


        </TableRow>

        <TableRow
            android:id="@+id/tableRow3"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="76dp">

            <TextView
                android:layout_width="135dp"
                android:layout_height="30dp"
                android:background="@drawable/rmv_fil_design"
                android:fontFamily="@font/arial"
                android:gravity="center_vertical"
                android:paddingLeft="10dp"
                android:text="Chassi No"
                android:textColor="#68156B"
                android:textSize="13dp"
                app:textAllCaps="true" />

            <TextView
                android:id="@+id/txtchassi"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:background="@drawable/rmv_display"
                android:fontFamily="@font/arial"
                android:gravity="center_vertical"
                android:textStyle="bold"
                android:paddingLeft="10dp"
                android:layout_marginLeft="3dp"
                android:text="Vehicle No"
                android:textColor="#FFF"
                android:textSize="13dp"
                app:textAllCaps="true" />
        </TableRow>

        <TableRow
            android:id="@+id/tableRow4"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="109dp">

            <TextView
                android:layout_width="135dp"
                android:layout_height="30dp"
                android:background="@drawable/rmv_fil_design"
                android:fontFamily="@font/arial"
                android:gravity="center_vertical"
                android:paddingLeft="10dp"
                android:text="ME Officer"
                android:textColor="#68156B"
                android:textSize="13dp"
                app:textAllCaps="true" />

            <TextView
                android:id="@+id/txtmename"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:background="@drawable/rmv_display"
                android:fontFamily="@font/arial"
                android:gravity="center_vertical"
                android:paddingLeft="10dp"
                android:layout_marginLeft="3dp"
                android:text="Vehicle No"
                android:textStyle="bold"
                android:textColor="#FFF"
                android:textSize="13dp"
                app:textAllCaps="true" />
        </TableRow>

        <TableRow
            android:id="@+id/tableRow5"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="142dp">

            <TextView
                android:layout_width="135dp"
                android:layout_height="30dp"
                android:background="@drawable/rmv_fil_design"
                android:fontFamily="@font/arial"
                android:gravity="center_vertical"
                android:paddingLeft="10dp"
                android:text="po Date"
                android:textColor="#68156B"
                android:textSize="13dp"
                app:textAllCaps="true" />

            <TextView
                android:id="@+id/txtpodate"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:background="@drawable/rmv_display"
                android:fontFamily="@font/arial"
                android:gravity="center_vertical"
                android:paddingLeft="10dp"
                android:layout_marginLeft="3dp"
                android:text="Vehicle No"
                android:textColor="#FFF"
                android:textStyle="bold"
                android:textSize="13dp"
                app:textAllCaps="true" />
        </TableRow>

        <TableRow
            android:id="@+id/tableRow6"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="175dp">

            <TextView
                android:layout_width="135dp"
                android:layout_height="30dp"
                android:background="@drawable/rmv_fil_design"
                android:fontFamily="@font/arial"
                android:gravity="center_vertical"
                android:paddingLeft="10dp"
                android:text="branch code"
                android:textColor="#68156B"
                android:textSize="13dp"
                app:textAllCaps="true" />

            <TextView
                android:id="@+id/txtbrcode"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:background="@drawable/rmv_display"
                android:fontFamily="@font/arial"
                android:gravity="center_vertical"
                android:paddingLeft="10dp"
                android:layout_marginLeft="3dp"
                android:text="Vehicle No"
                android:textColor="#FFF"
                android:textStyle="bold"
                android:textSize="13dp"
                app:textAllCaps="true" />
        </TableRow>
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="330dp"
        android:layout_marginTop="280dp"
        app:layout_constraintTop_toTopOf="parent"
        android:background="@drawable/edittextdesign"
        tools:layout_editor_absoluteX="0dp">

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="5dp">

            <TextView
                android:layout_width="135dp"
                android:layout_height="30dp"
                android:background="@drawable/fildesign"
                android:fontFamily="@font/arial"
                android:gravity="center_vertical"
                android:paddingLeft="10dp"
                android:text="PID NO"
                android:textColor="#fff"
                android:textSize="13dp"
                app:textAllCaps="true" />

            <EditText
                android:id="@+id/txtPIDNO"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:layout_marginLeft="3dp"
                android:background="@drawable/edittextdesign"
                android:fontFamily="@font/arial"
                android:gravity="center_vertical"
                android:paddingLeft="10dp"
                android:textColor="#000000"
                android:textSize="15dp"
                app:textAllCaps="true" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="40dp">

            <TextView
                android:layout_width="135dp"
                android:layout_height="30dp"
                android:background="@drawable/fildesign"
                android:fontFamily="@font/arial"
                android:gravity="center_vertical"
                android:paddingLeft="10dp"
                android:text="Verification"
                android:textColor="#fff"
                android:textSize="13dp"
                app:textAllCaps="true" />

            <Spinner
                android:id="@+id/txtsts"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:layout_marginLeft="3dp"
                android:background="@drawable/edittextdesign">

            </Spinner>
        </TableRow>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:background="@drawable/fildesign"
            android:fontFamily="@font/arial"
            android:gravity="center_vertical"
            android:paddingLeft="10dp"
            android:layout_marginLeft="5dp"
            android:layout_alignParentTop="true"
            android:layout_marginTop="75dp"
            android:text="Remarks"
            android:textAlignment="center"
            android:textColor="#fff"
            android:textSize="13dp"
            app:textAllCaps="true" />

        <EditText
            android:id="@+id/txtremarks"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:background="@drawable/edittextdesign"
            android:fontFamily="@font/arial"
            android:gravity="center_vertical"
            android:paddingLeft="10dp"
            android:layout_marginLeft="3dp"
            android:textColor="#000000"
            android:layout_marginTop="110dp"
            android:textSize="15dp"
            app:textAllCaps="true" />

        <Button
            android:id="@+id/btnBROWSE"
            android:foreground="?android:attr/selectableItemBackground"
            android:layout_width="150dp"
            android:layout_height="35dp"
            android:gravity="center"
            android:background="@drawable/normalbutton"
            android:fontFamily="@font/arial"
            android:text="Attach Receipt "
            android:textColor="#FAF7FA"
            android:textSize="15dp"
            android:layout_marginLeft="5dp"
            android:layout_alignParentTop="true"
            android:layout_marginTop="175dp"
            app:layout_constraintVertical_bias="0.986" />

        <ImageView
            android:id="@+id/imgpicture"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:scaleType="fitXY"
            android:layout_alignParentTop="true"
            android:layout_marginTop="180dp"
            android:layout_marginLeft="180dp"
            />

        <Button
            android:id="@+id/btnsave"
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:layout_alignParentTop="true"
            android:layout_marginTop="250dp"
            android:background="@drawable/normalbutton"
            android:fontFamily="@font/arial"
            android:foreground="?android:attr/selectableItemBackground"
            android:text="save"
            android:textColor="#FFF"
            android:textSize="15dp"
            app:layout_constraintBottom_toBottomOf="parent" />

        <Button
            android:id="@+id/btnupload"
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:layout_alignParentTop="true"
            android:layout_marginTop="285dp"
            android:background="@drawable/normalbutton"
            android:fontFamily="@font/arial"
            android:foreground="?android:attr/selectableItemBackground"
            android:text="upload"
            android:textColor="#FFF"
            android:textSize="15dp"
            app:layout_constraintBottom_toBottomOf="parent" />


    </RelativeLayout>


</androidx.constraintlayout.widget.ConstraintLayout>
