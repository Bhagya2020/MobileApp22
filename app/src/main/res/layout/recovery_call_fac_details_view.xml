<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFF"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#673AB7"
        android:orientation="horizontal">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/imageView10"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:scaleType="fitXY"
                android:src="@drawable/hedingdesign"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/textView3"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginLeft="10dp"
                android:fontFamily="@font/arial"
                android:gravity="center_vertical"
                android:text="Call Center Details"
                android:textAllCaps="true"
                android:textColor="#FFFF"
                android:textSize="20dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />
        </androidx.constraintlayout.widget.ConstraintLayout>
    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_alignParentTop="true"
        android:layout_marginTop="50dp"
        >

        <TextView
            android:id="@+id/txtShowDetails"
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:textAllCaps="true"
            android:fontFamily="@font/arial"
            android:text="Minimum Amount to be Collected"
            android:background="#740966"
            android:textColor="#fff"
            android:layout_marginTop="2dp"
            android:textSize="15dp"
            android:textStyle="bold"
            android:gravity="center_vertical|center"
            >
        </TextView>


        <TableRow
            android:id="@+id/tableRow1"
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:layout_marginTop="50dp">

            <TextView
                android:layout_width="110dp"
                android:layout_height="30dp"
                android:fontFamily="@font/arial"
                android:gravity="center_vertical"
                android:paddingLeft="10dp"
                android:text="Sort Order"
                android:textColor="#68156B"
                android:textSize="13dp"
                app:textAllCaps="true" />

            <Spinner
                android:id="@+id/txtsortorder"
                android:layout_width="140dp"
                android:layout_height="30dp"
                android:background="@drawable/edittextdesign">

            </Spinner>

            <Button
                android:id="@+id/btnsort"
                android:layout_width="110dp"
                android:layout_height="30dp"
                android:textColor="#FFF"
                android:textStyle="bold"
                android:layout_marginLeft="5dp"
                android:background="@drawable/fildesign"
                android:fontFamily="@font/arial"
                android:text="Sort" />
        </TableRow>

    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_alignParentTop="true"
        android:layout_marginTop="150dp"
        >

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/ReyFacList"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="5dp">

        </androidx.recyclerview.widget.RecyclerView>
    </LinearLayout>
</RelativeLayout>