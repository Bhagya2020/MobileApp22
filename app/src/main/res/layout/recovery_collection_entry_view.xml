<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/TxtAssingCaseName"
        android:layout_width="match_parent"
        android:text="Collection Entry"
        android:textStyle="bold"
        android:layout_alignParentTop="true"
        android:layout_marginTop="3dp"
        android:textSize="15dp"
        android:gravity="center"
        android:background="#740966"
        android:fontFamily="@font/arial"
        android:textColor="#FFF"
        android:layout_height="40dp"
        />

    <TextView
        android:id="@+id/TxtAssingFacno"
        android:layout_width="match_parent"
        android:text="Facility No - HLELE19201844788"
        android:textStyle="bold"
        android:layout_alignParentTop="true"
        android:layout_marginTop="48dp"
        android:textSize="15dp"
        android:gravity="center"
        android:background="@drawable/edittextdesign"
        android:fontFamily="@font/poppinsregular"
        android:textColor="#740966"
        android:layout_height="40dp"
        />


    <ScrollView
        android:id="@+id/scrollView2"
        android:layout_width="match_parent"
        android:layout_height="530dp"
        android:layout_alignParentTop="true"
        android:layout_marginTop="100dp"
        >

        <LinearLayout
            android:layout_width="320dp"
            android:layout_height="450dp"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:textSize="15sp"
                android:layout_marginLeft="12dp"
                android:fontFamily="@font/arial"
                android:text="Mode Of Payment"
                android:layout_alignParentTop="true"
                />

            <com.toptoche.searchablespinnerlibrary.SearchableSpinner
                android:id="@+id/spnPaymentMode"
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:textSize="10dp"
                android:background="@drawable/recoveryedittexyt"
                android:fontFamily="@font/arial"
                android:textColor="#9D9BA2"
                android:layout_marginLeft="10dp"
                android:layout_alignParentTop="true"
                android:textStyle="bold">
            </com.toptoche.searchablespinnerlibrary.SearchableSpinner>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:textSize="15sp"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="12dp"
                android:fontFamily="@font/arial"
                android:text="Manual Receipt No"
                android:layout_alignParentTop="true"
                />

            <EditText
                android:id="@+id/TxtManualRept"
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:textSize="15sp"
                android:background="@drawable/recoveryedittexyt"
                android:layout_marginLeft="10dp"
                android:gravity="center"
                android:fontFamily="@font/arial"
                android:layout_alignParentTop="true"
                />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:textSize="15sp"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="12dp"
                android:fontFamily="@font/arial"
                android:text="Provisional Receipt No"
                android:layout_alignParentTop="true"
                />

            <EditText
                android:id="@+id/TxtProReceipt"
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:textSize="15sp"
                android:background="@drawable/recoveryedittexyt"
                android:layout_marginLeft="10dp"
                android:gravity="center"
                android:fontFamily="@font/arial"
                android:layout_alignParentTop="true"
                />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:textSize="15sp"
                android:layout_marginLeft="12dp"
                android:fontFamily="@font/arial"
                android:text="Payment Received from Third Party"
                android:layout_alignParentTop="true"
                />

            <Spinner
                android:id="@+id/spnPaymentReceied"
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:layout_marginLeft="10dp"
                android:background="@drawable/recoveryedittexyt"
                android:fontFamily="@font/arial"
                android:textColor="#9D9BA2"
                android:textStyle="bold">

            </Spinner>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:textSize="15sp"
                android:layout_marginLeft="12dp"
                android:fontFamily="@font/arial"
                android:text="Duplicate Receipt"
                android:layout_alignParentTop="true"
                />

            <Spinner
                android:id="@+id/spnDuplicateReceipt"
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:textSize="10dp"
                android:background="@drawable/recoveryedittexyt"
                android:fontFamily="@font/arial"
                android:textColor="#9D9BA2"
                android:layout_marginLeft="10dp"
                android:layout_alignParentTop="true"
                android:textStyle="bold">
            </Spinner>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:textSize="15sp"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="12dp"
                android:fontFamily="@font/arial"
                android:text="Collection Amount"
                android:layout_alignParentTop="true"
                />

            <EditText
                android:id="@+id/TxtcolAmt"
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:inputType="numberDecimal"
                android:textSize="15sp"
                android:background="@drawable/recoveryedittexyt"
                android:layout_marginLeft="10dp"
                android:gravity="center"
                android:fontFamily="@font/arial"
                android:layout_alignParentTop="true"
                />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:textSize="15sp"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="12dp"
                android:fontFamily="@font/arial"
                android:text="Collection Entry Date"
                android:layout_alignParentTop="true"
                />

            <TextView
                android:id="@+id/TxtcolDate"
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:textSize="15sp"
                android:background="@drawable/recoveryedittexyt"
                android:layout_marginLeft="10dp"
                android:gravity="center"
                android:fontFamily="@font/arial"
                android:layout_alignParentTop="true"
                />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:textSize="15sp"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="12dp"
                android:fontFamily="@font/arial"
                android:text="Comment"
                android:layout_alignParentTop="true"
                />

            <EditText
                android:id="@+id/TxtComment"
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:textSize="15sp"
                android:background="@drawable/recoveryedittexyt"
                android:layout_marginLeft="10dp"
                android:gravity="center"
                android:fontFamily="@font/arial"
                android:layout_alignParentTop="true"
                />

            <Button
                android:id="@+id/btnAttachReceipt"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginTop="10dp"
                android:layout_alignParentTop="true"
                android:background="#720b98"
                android:text="Attach Manual Receipt"
                android:textAllCaps="false"
                android:layout_marginLeft="10dp"
                android:textSize="15sp"
                android:fontFamily="@font/arial"
                android:textColor="#FFF"
                />

            <ImageView
                android:id="@+id/imgpicture"
                android:layout_width="150dp"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="10dp"
                android:layout_height="150dp"
                app:srcCompat="@android:drawable/btn_dialog" />


        </LinearLayout>
    </ScrollView>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="20dp"
        >

        <Button
            android:id="@+id/btnLock"
            android:layout_width="150dp"
            android:layout_height="40dp"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="5dp"
            android:background="#720b98"
            android:fontFamily="@font/arial"
            android:text="Draft"
            android:textAllCaps="false"
            android:textColor="#FFF"
            android:textSize="15sp" />

        <Button
            android:id="@+id/btnsubmit"
            android:layout_width="150dp"
            android:layout_height="40dp"
            android:layout_marginLeft="190dp"
            android:layout_alignParentTop="true"
            android:layout_marginTop="5dp"
            android:background="#720b98"
            android:textAllCaps="false"
            android:text="Submit"
            android:textSize="15sp"
            android:fontFamily="@font/arial"
            android:textColor="#FFF"
            />


    </RelativeLayout>

</RelativeLayout>