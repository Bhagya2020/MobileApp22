<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/TxtAssingCaseName"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginTop="3dp"
            android:background="#740966"
            android:fontFamily="@font/arial"
            android:gravity="center"
            android:text="Asset Verification Information"
            android:textColor="#FFF"
            android:textSize="15dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/TxtAssingFacno"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="@drawable/edittextdesign"
            android:fontFamily="@font/arial"
            android:gravity="center"
            android:text="Facility No - HLELE19201844788"
            android:textColor="#740966"
            android:textSize="15dp"
            android:textStyle="bold" />

        <ScrollView
            android:id="@+id/scrollView2"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="12dp"
            android:layout_marginRight="10dp"
            android:layout_weight="1">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="450dp"
                android:orientation="vertical"
                android:paddingTop="5dp">

                <TextView
                    android:layout_width="150dp"
                    android:layout_height="30dp"
                    android:layout_alignParentTop="true"
                    android:fontFamily="@font/arial"
                    android:text="Vehicle Model"
                    android:textSize="15sp" />

                <TextView
                    android:id="@+id/TxtVehilceModel"
                    android:layout_width="match_parent"
                    android:layout_height="35dp"
                    android:background="@drawable/recoveryedittexyt"
                    android:fontFamily="@font/arial"
                    android:textSize="15sp" />

                <TextView
                    android:layout_width="150dp"
                    android:layout_height="30dp"
                    android:layout_alignParentTop="true"
                    android:layout_marginTop="10dp"
                    android:fontFamily="@font/arial"
                    android:text="Vehicle Number"
                    android:textSize="15sp" />

                <TextView
                    android:id="@+id/TxtVehilceNo"
                    android:layout_width="match_parent"
                    android:layout_height="35dp"
                    android:background="@drawable/recoveryedittexyt"
                    android:gravity="center"
                    android:textSize="15sp"
                    app:fontFamily="@font/arial" />

                <TextView
                    android:layout_width="150dp"
                    android:layout_height="30dp"
                    android:layout_alignParentTop="true"
                    android:layout_marginTop="10dp"
                    android:fontFamily="@font/arial"
                    android:text="Driven By"
                    android:textSize="15sp" />

                <com.toptoche.searchablespinnerlibrary.SearchableSpinner
                    android:id="@+id/spnDriveBy"
                    android:layout_width="match_parent"
                    android:layout_height="35dp"
                    android:layout_alignParentTop="true"
                    android:background="@drawable/recoveryedittexyt"
                    android:fontFamily="@font/arial"
                    android:textColor="#9D9BA2"
                    android:textSize="10dp"
                    android:textStyle="bold"></com.toptoche.searchablespinnerlibrary.SearchableSpinner>

                <TextView
                    android:layout_width="150dp"
                    android:layout_height="30dp"
                    android:layout_alignParentTop="true"
                    android:layout_marginTop="10dp"
                    android:fontFamily="@font/arial"
                    android:text="Vehicle Condition"
                    android:textSize="15sp" />

                <com.toptoche.searchablespinnerlibrary.SearchableSpinner
                    android:id="@+id/spnVehicleCondtion"
                    android:layout_width="match_parent"
                    android:layout_height="35dp"
                    android:background="@drawable/recoveryedittexyt"
                    android:fontFamily="@font/arial"
                    android:textColor="#9D9BA2"
                    android:textSize="10dp"
                    android:textStyle="bold"></com.toptoche.searchablespinnerlibrary.SearchableSpinner>

                <TextView
                    android:layout_width="150dp"
                    android:layout_height="30dp"
                    android:layout_alignParentTop="true"
                    android:layout_marginTop="10dp"
                    android:fontFamily="@font/arial"
                    android:text="Ownersship"
                    android:textSize="15sp" />

                <com.toptoche.searchablespinnerlibrary.SearchableSpinner
                    android:id="@+id/spnOwnship"
                    android:layout_width="match_parent"
                    android:layout_height="35dp"
                    android:background="@drawable/recoveryedittexyt"
                    android:fontFamily="@font/arial"
                    android:textColor="#9D9BA2"
                    android:textSize="10dp"
                    android:textStyle="bold"></com.toptoche.searchablespinnerlibrary.SearchableSpinner>

                <TextView
                    android:layout_width="200dp"
                    android:layout_height="30dp"
                    android:layout_alignParentTop="true"
                    android:layout_marginTop="10dp"
                    android:fontFamily="@font/arial"
                    android:text="Date Of Evaluation"
                    android:textSize="15sp" />

                <EditText
                    android:id="@+id/TxtDateEvalstion"
                    android:layout_width="match_parent"
                    android:layout_height="35dp"
                    android:layout_alignParentTop="true"
                    android:background="@drawable/recoveryedittexyt"
                    android:fontFamily="@font/arial"
                    android:textSize="15sp" />

                <TextView
                    android:layout_width="150dp"
                    android:layout_height="30dp"
                    android:layout_alignParentTop="true"
                    android:layout_marginTop="10dp"
                    android:fontFamily="@font/arial"
                    android:text="Comment"
                    android:textSize="15sp" />

                <EditText
                    android:id="@+id/Txtcomment"
                    android:layout_width="match_parent"
                    android:layout_height="35dp"
                    android:layout_marginBottom="5dp"
                    android:background="@drawable/recoveryedittexyt"
                    android:focusable="true"
                    android:focusableInTouchMode="true"
                    android:fontFamily="@font/arial"
                    android:textSize="15sp" />
            </LinearLayout>
        </ScrollView>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginBottom="5dp"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btnLock"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="5dp"
                android:layout_marginRight="5dp"
                android:layout_weight="1"
                android:background="#720b98"
                android:fontFamily="@font/arial"
                android:text="Draft"
                android:textAllCaps="false"
                android:textColor="#FFF"
                android:textSize="15sp" />

            <Button
                android:id="@+id/btnsubmit"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="5dp"
                android:layout_marginRight="5dp"
                android:layout_weight="1"
                android:background="#720b98"
                android:fontFamily="@font/arial"
                android:text="Submit"
                android:textAllCaps="false"
                android:textColor="#FFF"
                android:textSize="15sp" />
        </LinearLayout>
    </LinearLayout>


</RelativeLayout>





