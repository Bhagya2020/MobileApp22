<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFF"
    tools:context=".Application">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/imageView10"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:scaleType="fitXY"
                android:src="@drawable/hedingdesign"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/TxtDataSts"
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:layout_marginRight="10dp"
                android:fontFamily="@font/arial"
                android:gravity="center|right"
                android:text="OFFLINE"
                android:textColor="#FFF"
                android:textSize="15dp"
                app:layout_constraintBottom_toBottomOf="@+id/imageView10"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/textView8"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginLeft="10dp"
                android:fontFamily="@font/arial"
                android:gravity="center_vertical"
                android:text="APPLICATION"
                android:textColor="#FFFF"
                android:textSize="25dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="@+id/imageView10" />
        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.core.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:layout_weight="1"
            android:fillViewport="true">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/textView9"
                    android:layout_width="match_parent"
                    android:layout_height="35dp"
                    android:layout_alignParentTop="true"
                    android:layout_marginTop="5dp"
                    android:gravity="center"
                    android:text="Pending Applications"
                    android:textAllCaps="true"
                    android:textColor="#520066"
                    android:textSize="20sp"
                    app:fontFamily="@font/arial" />

                <TextView
                    android:id="@+id/txtSelectAppnpo"
                    android:layout_width="match_parent"
                    android:layout_height="28dp"
                    android:layout_marginTop="5dp"
                    android:background="@drawable/edittextdesign"
                    android:fontFamily="@font/arial"
                    android:gravity="center_vertical|left|start"
                    android:textAlignment="center"
                    android:textColor="#AD386D"
                    android:textSize="15dp"
                    android:textStyle="bold"
                    app:fontFamily="@font/arial" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1">

                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/rcppendingapp"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_alignParentTop="false"
                        android:layout_marginTop="5dp"
                        android:clickable="false" />


                </LinearLayout>

            </LinearLayout>
        </androidx.core.widget.NestedScrollView>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:orientation="vertical">

            <Button
                android:id="@+id/btnporequest"
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:layout_marginBottom="5dp"
                android:background="@drawable/normalbutton"
                android:fontFamily="@font/arial"
                android:foreground="?android:attr/selectableItemBackground"
                android:text="REQUEST PO"
                android:textColor="#FFF"
                android:textSize="15dp" />

            <Button
                android:id="@+id/btnmodify"
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:layout_marginBottom="5dp"
                android:background="@drawable/normalbutton"
                android:foreground="?android:attr/selectableItemBackground"
                android:text="Modify"
                android:textColor="#FFF"
                android:textSize="15dp"
                app:fontFamily="@font/arial" />

            <Button
                android:id="@+id/btndelete"
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:layout_alignParentTop="true"
                android:layout_marginBottom="5dp"
                android:background="@drawable/normalbutton"
                android:fontFamily="@font/arial"
                android:foreground="?android:attr/selectableItemBackground"
                android:text="Delete"
                android:textColor="#FFF"
                android:textSize="15dp" />

            <Button
                android:id="@+id/btndocupload"
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:layout_marginBottom="5dp"
                android:background="@drawable/normalbutton"
                android:fontFamily="@font/arial"
                android:foreground="?android:attr/selectableItemBackground"
                android:text="Document"
                android:textColor="#FFF"
                android:textSize="15dp" />

            <Button
                android:id="@+id/btncreatenewapp"
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:layout_alignParentTop="true"
                android:layout_marginBottom="5dp"
                android:background="@drawable/normalbutton"
                android:clickable="true"
                android:fontFamily="@font/arial"
                android:foreground="?android:attr/selectableItemBackground"
                android:text="NEW APPLICATION"
                android:textAllCaps="false"
                android:textColor="#FFF"
                android:textIsSelectable="false"
                android:textSize="15dp" />
        </LinearLayout>

    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>