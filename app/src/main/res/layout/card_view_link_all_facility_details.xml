                android:textSize="13dp"
                android:layout_marginLeft="25dp"
                android:fontFamily="@font/arial"
                android:textStyle="bold"
                android:gravity="center"
                />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_marginTop="95dp"
