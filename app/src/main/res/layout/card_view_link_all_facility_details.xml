            android:layout_height="30dp">

            <TextView
                android:layout_width="140dp"
                android:layout_height="30dp"
                android:text="Last Pay Date"
                android:textSize="13dp"
                android:textColor="#68156B"
                android:fontFamily="@font/arial"
                android:textStyle="bold"
                android:gravity="center"
                />

            <TextView
                android:id="@+id/txtlastpaydate"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:text="2021-04-21"
                android:textColor="#68156B"
                android:textSize="13dp"
                android:layout_marginLeft="25dp"
                android:fontFamily="@font/arial"
                android:textStyle="bold"
                android:gravity="center"
                />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_marginTop="155dp"
            android:layout_marginLeft="40dp"

            android:layout_height="30dp">

            <TextView
                android:layout_width="140dp"
                android:layout_height="30dp"
                android:text="Last Pay Amount"
                android:textSize="13dp"
                android:textColor="#68156B"
                android:fontFamily="@font/arial"
                android:textStyle="bold"
                android:gravity="center"
                />

            <TextView
                android:id="@+id/txtlastpayamt"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:text="2021-04-21"
                android:textColor="#68156B"
                android:textSize="13dp"
                android:layout_marginLeft="25dp"
                android:fontFamily="@font/arial"
                android:textStyle="bold"
                android:gravity="center"
                />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_marginTop="185dp"
            android:layout_marginLeft="40dp"

            android:layout_height="30dp">

            <TextView
                android:layout_width="140dp"
                android:layout_height="30dp"
                android:text="Average Payment"
                android:textSize="13dp"
                android:textColor="#68156B"
                android:fontFamily="@font/arial"
                android:textStyle="bold"
                android:gravity="center"
                />

            <TextView
                android:id="@+id/txtavgpayment"
