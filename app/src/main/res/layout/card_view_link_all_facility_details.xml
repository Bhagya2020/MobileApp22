                android:layout_height="30dp"
                android:text="Facility No"
                android:textSize="13dp"
                android:textColor="#68156B"
                android:fontFamily="@font/arial"
                android:textStyle="bold"
                android:gravity="center"
                />

            <TextView
                android:id="@+id/txtfacilityno"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:text="2021-04-21"
                android:textColor="#68156B"
                android:textSize="13dp"
                android:layout_marginLeft="25dp"
                android:fontFamily="@font/arial"
                android:textStyle="bold"
                android:gravity="center"
                />


        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_marginTop="35dp"
            android:layout_marginLeft="40dp"

            android:layout_height="30dp">

            <TextView
                android:layout_width="140dp"
                android:layout_height="30dp"
                android:text="Facility Amount"
                android:textSize="13dp"
                android:textColor="#68156B"
                android:fontFamily="@font/arial"
                android:textStyle="bold"
                android:gravity="center"
                />

            <TextView
                android:id="@+id/txtfacamount"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:text="2021-04-21"
                android:textColor="#68156B"
                android:textSize="13dp"
                android:layout_marginLeft="25dp"
                android:fontFamily="@font/arial"
                android:textStyle="bold"
                android:gravity="center"
                />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_marginTop="65dp"
            android:layout_marginLeft="40dp"

            android:layout_height="30dp">

            <TextView
                android:layout_width="140dp"
                android:layout_height="30dp"
                android:text="Rental Mature"
                android:textSize="13dp"
                android:textColor="#68156B"
                android:fontFamily="@font/arial"
                android:textStyle="bold"
                android:gravity="center"
                />

            <TextView
                android:id="@+id/txtrntmmature"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:text="2021-04-21"
