                />

            <TextView
                android:id="@+id/txttotsettlement"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:text="2021-04-21"
                android:textColor="#68156B"
                android:textSize="13dp"
                android:layout_marginLeft="25dp"
                android:fontFamily="@font/arial"
                android:textStyle="bold"
                android:gravity="center"
                />
        </TableRow>

        <TableRow
            android:id="@+id/tablebutton"
            android:layout_width="match_parent"
            android:layout_marginLeft="40dp"

            android:layout_marginTop="280dp"
            android:layout_height="30dp">

            <Button
                android:id="@+id/btnpayment"
                android:layout_width="90dp"
                android:layout_height="25dp"
                android:textColor="#FFF"
                android:background="@drawable/fildesign"
                android:fontFamily="@font/arial"
                android:layout_marginLeft="5dp"
                android:textAllCaps="false"
                android:text="Payment" />

            <Button
                android:id="@+id/btnnotepaid"
                android:layout_width="90dp"
                android:layout_height="25dp"
                android:textColor="#FFF"
                android:background="@drawable/fildesign"
                android:fontFamily="@font/arial"
                android:layout_marginLeft="5dp"
                android:textAllCaps="false"
                android:text="NotePaid" />

            <Button
                android:id="@+id/btnCodetails"
                android:layout_width="90dp"
                android:layout_height="25dp"
                android:textColor="#FFF"
                android:background="@drawable/fildesign"
                android:fontFamily="@font/arial"
                android:layout_marginLeft="5dp"
                android:textAllCaps="false"
                android:text="Co.Appli" />

            <Button
                android:id="@+id/btnallDetails"
                android:layout_width="90dp"
                android:layout_height="25dp"
                android:textColor="#FFF"
                android:background="@drawable/fildesign"
                android:fontFamily="@font/arial"
                android:textAllCaps="false"
                android:layout_marginLeft="5dp"
                android:text="All Details" />
        </TableRow>






