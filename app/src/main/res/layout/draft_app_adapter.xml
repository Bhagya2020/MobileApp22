<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="400dp"
    android:layout_height="120dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:card_view="http://schemas.android.com/tools"
    app:cardCornerRadius="10dp"
    android:padding="5dp"
    android:clickable="true"
    android:focusable="true"
    android:layout_marginLeft="1dp"
    card_view:cardElevation="0dp"
    app:layout_constraintCircleRadius="0dp"
    android:layout_marginTop="4dp"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="390dp"
        android:layout_height="110dp"
        android:layout_margin="5dp"
        android:background="@drawable/scroolviewdesign"
        android:orientation="vertical">

        <TableRow
            android:id="@+id/tableRow8"
            android:layout_width="410dp"
            android:layout_height="30dp"
            android:layout_marginLeft="2dp"
            android:layout_marginTop="10dp">

            <TextView
                android:id="@+id/textview_nic"
                android:layout_width="120dp"
                android:layout_height="30dp"
                android:layout_alignParentTop="true"
                android:fontFamily="@font/arial"
                android:text="Line 1"
                android:gravity="center_vertical"
                android:layout_marginStart="5dp"
                android:textColor="#AD386D"
                android:textSize="15dp" />

            <TextView
                android:id="@+id/textview_clname"
                android:layout_width="230dp"
                android:layout_height="30dp"
                android:layout_alignParentTop="true"
                android:layout_marginLeft="3dp"
                android:fontFamily="@font/arial"
                android:text="Line 3"
                android:gravity="center_vertical"
                android:textColor="#AD386D"
                android:textSize="15dp" />
        </TableRow>

        <TextView
            android:id="@+id/textview_adders"
            android:layout_width="350dp"
            android:layout_height="30dp"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="40dp"
            android:gravity="center_vertical"
            android:fontFamily="@font/arial"
            android:layout_marginStart="5dp"
            android:text="Line 3"
            android:textColor="#AD386D"
            android:textSize="15dp" />

        <ImageButton
            android:id="@+id/ImgViewdoc"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:scaleType="fitXY"
            android:layout_marginTop="65dp"
            android:tooltipText="View Details"
            android:layout_marginLeft="340dp"
            android:src="@drawable/recdoc"
            android:background="#E1BEE7"
            />


    </RelativeLayout>


</androidx.cardview.widget.CardView>