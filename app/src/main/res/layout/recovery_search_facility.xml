<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">


    <TextView
        android:id="@+id/TxtAssingCaseName"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginTop="3dp"
        android:background="#740966"
        android:fontFamily="@font/arial"
        android:gravity="center"
        android:text="Search Facility Details"
        android:textColor="#FFF"
        android:textSize="15dp"
        android:textStyle="bold"
        app:layout_constraintTop_toTopOf="parent">

    </TextView>

    <Switch
        android:id="@+id/Swtonline"
        android:layout_width="130dp"
        android:layout_height="35dp"
        android:foregroundGravity="left"
        android:gravity="center|left"
        android:text="ONLINE"
        android:textColor="#740966"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/TxtAssingCaseName"
        app:layout_constraintEnd_toEndOf="@+id/TxtAssingCaseName"
        app:layout_constraintEnd_toStartOf="@+id/TxtAssingCaseName"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/TxtAssingCaseName">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#FFFFFF"
            android:orientation="vertical">

            <TableLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="10dp"
                    android:foregroundGravity="center"
                    android:gravity="center">

                    <TextView
                        android:layout_width="130dp"
                        android:layout_height="30dp"
                        android:fontFamily="@font/arial"
                        android:gravity="center"
                        android:text="Customer Name"
                        android:textSize="15sp" />

                    <TextView
                        android:layout_width="150dp"
                        android:layout_height="30dp"
                        android:fontFamily="@font/arial"
                        android:gravity="center"
                        android:text="Code"
                        android:textSize="15sp" />

                </TableRow>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:foregroundGravity="center"
                    android:gravity="center">

                    <EditText
                        android:id="@+id/TxtSerchClname"
                        android:layout_width="130dp"
                        android:layout_height="30dp"
                        android:layout_marginRight="5dp"
                        android:background="@drawable/recoveryedittexyt"
                        android:fontFamily="@font/arial"
                        android:gravity="center"
                        android:textSize="15sp" />

                    <EditText
                        android:id="@+id/TxtSerchClcode"
                        android:layout_width="130dp"
                        android:layout_height="30dp"
                        android:layout_marginLeft="5dp"
                        android:background="@drawable/recoveryedittexyt"
                        android:fontFamily="@font/arial"
                        android:gravity="center"
                        android:textSize="15sp" />

                </TableRow>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="10dp"
                    android:foregroundGravity="center"
                    android:gravity="center">

                    <TextView
                        android:layout_width="130dp"
                        android:layout_height="30dp"
                        android:fontFamily="@font/arial"
                        android:gravity="center"
                        android:text="Facility Number"
                        android:textSize="15sp" />

                    <TextView
                        android:layout_width="130dp"
                        android:layout_height="30dp"
                        android:fontFamily="@font/arial"
                        android:gravity="center"
                        android:text="Vehicle No"
                        android:textSize="15sp" />

                </TableRow>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:foregroundGravity="center"
                    android:gravity="center">

                    <EditText
                        android:id="@+id/TxtSerchFacno"
                        android:layout_width="130dp"
                        android:layout_height="30dp"
                        android:layout_marginRight="5dp"
                        android:background="@drawable/recoveryedittexyt"
                        android:fontFamily="@font/arial"
                        android:gravity="center"
                        android:textSize="15sp" />

                    <EditText
                        android:id="@+id/TxtSerchRegNo"
                        android:layout_width="130dp"
                        android:layout_height="30dp"
                        android:layout_marginLeft="5dp"
                        android:background="@drawable/recoveryedittexyt"
                        android:fontFamily="@font/arial"
                        android:gravity="center"
                        android:textSize="15sp" />

                </TableRow>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="10dp"
                    android:foregroundGravity="center"
                    android:gravity="center">

                    <TextView
                        android:layout_width="130dp"
                        android:layout_height="30dp"
                        android:fontFamily="@font/arial"
                        android:gravity="center"
                        android:text="Nic"
                        android:textSize="15sp" />

                    <TextView
                        android:layout_width="130dp"
                        android:layout_height="30dp"
                        android:fontFamily="@font/arial"
                        android:gravity="center"
                        android:text="Postal Town"
                        android:textSize="15sp" />
                </TableRow>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:foregroundGravity="center"
                    android:gravity="center">

                    <EditText
                        android:id="@+id/TxtSerchnic"
                        android:layout_width="130dp"
                        android:layout_height="30dp"
                        android:layout_marginRight="5dp"
                        android:background="@drawable/recoveryedittexyt"
                        android:fontFamily="@font/arial"
                        android:gravity="center"
                        android:textSize="15sp" />

                    <EditText
                        android:id="@+id/TxtSerchPostTown"
                        android:layout_width="130dp"
                        android:layout_height="30dp"
                        android:layout_marginLeft="5dp"
                        android:background="@drawable/recoveryedittexyt"
                        android:fontFamily="@font/arial"
                        android:gravity="center"
                        android:textSize="15sp" />

                </TableRow>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="15dp"
                    android:gravity="center">

                    <Button
                        android:id="@+id/btnSerachFacdetails"
                        android:layout_width="130dp"
                        android:layout_height="35dp"
                        android:layout_marginLeft="5dp"
                        android:layout_marginRight="5dp"
                        android:layout_weight="1"
                        android:background="#720b98"
                        android:fontFamily="@font/arial"
                        android:text="Search"
                        android:textAllCaps="false"
                        android:textColor="#FFF"
                        android:textSize="15sp" />

                    <Button
                        android:id="@+id/btnClear"
                        android:layout_width="130dp"
                        android:layout_height="35dp"
                        android:layout_marginLeft="5dp"
                        android:layout_marginRight="5dp"
                        android:layout_weight="1"
                        android:background="#720b98"
                        android:fontFamily="@font/arial"
                        android:text="Clear Field"
                        android:textAllCaps="false"
                        android:textColor="#FFF"
                        android:textSize="15sp" />
                </TableRow>

            </TableLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="10dp"
                android:layout_marginRight="5dp"
                android:orientation="vertical">

                <Button
                    android:id="@+id/btnAddCase"
                    android:layout_width="match_parent"
                    android:layout_height="35dp"
                    android:background="#720b98"
                    android:fontFamily="@font/arial"
                    android:text="Add Case My Wallet"
                    android:textAllCaps="false"
                    android:textColor="#FFF"
                    android:textStyle="bold" />

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/ReyFacList"
                    android:layout_width="match_parent"
                    android:layout_height="200dp"
                    android:layout_marginTop="5dp">

                </androidx.recyclerview.widget.RecyclerView>
            </LinearLayout>

        </LinearLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>