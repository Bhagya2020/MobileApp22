<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:background="@drawable/cashdeposit"
    android:layout_height="match_parent">


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp">

                <TextView
                    android:id="@+id/textView"
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:fontFamily="@font/arial"
                    android:gravity="center_vertical"
                    android:text="Total Receipt"
                    android:textAlignment="center"
                    android:textColor="#740966"
                    android:textSize="20dp" />

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/ReyFacList"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:layout_marginTop="40dp">

                </androidx.recyclerview.widget.RecyclerView>


                <Button
                    android:id="@+id/btnmarkDeposit"
                    android:layout_width="match_parent"
                    android:layout_height="35dp"
                    android:layout_alignParentTop="true"
                    android:layout_marginTop="330dp"
                    android:background="#720b98"
                    android:fontFamily="@font/arial"
                    android:text="Mark as Deposit"
                    android:textAllCaps="false"
                    android:textColor="#FFF"
                    android:textSize="15sp" />

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/RelativeDeposit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <TableRow
                    android:layout_width="400dp"
                    android:layout_height="35dp"
                    android:layout_marginTop="10dp">

                    <TextView
                        android:layout_width="200dp"
                        android:layout_height="30dp"
                        android:layout_marginLeft="12dp"
                        android:fontFamily="@font/arial"
                        android:gravity="center_vertical"
                        android:text="Total Receipt Amount"
                        android:textSize="15sp" />

                    <EditText
                        android:id="@+id/TxttotReciptAmt"
                        android:layout_width="150dp"
                        android:layout_height="30dp"
                        android:background="@drawable/recoveryedittexyt"
                        android:fontFamily="@font/poppinsregular"
                        android:inputType="numberDecimal"
                        android:paddingLeft="5dp"
                        android:textSize="15dp"></EditText>
                </TableRow>

                <TableRow
                    android:layout_width="400dp"
                    android:layout_height="35dp"
                    android:layout_marginTop="50dp">

                    <TextView
                        android:layout_width="200dp"
                        android:layout_height="30dp"
                        android:layout_marginLeft="12dp"
                        android:fontFamily="@font/arial"
                        android:gravity="center_vertical"
                        android:text="Total Deposit Amount"
                        android:textSize="15sp" />

                    <EditText
                        android:id="@+id/Txttotdeposit"
                        android:layout_width="150dp"
                        android:layout_height="30dp"
                        android:background="@drawable/recoveryedittexyt"
                        android:fontFamily="@font/arial"
                        android:inputType="numberDecimal"
                        android:paddingLeft="5dp"
                        android:textSize="15dp"></EditText>
                </TableRow>


                <TableRow
                    android:layout_width="400dp"
                    android:layout_height="35dp"
                    android:layout_marginTop="90dp">

                    <TextView
                        android:layout_width="200dp"
                        android:layout_height="30dp"
                        android:layout_marginLeft="12dp"
                        android:fontFamily="@font/arial"
                        android:gravity="center_vertical"
                        android:text="Deposit Bank"
                        android:textSize="15sp" />

                    <EditText
                        android:id="@+id/TxtDepositBank"
                        android:layout_width="150dp"
                        android:layout_height="30dp"
                        android:background="@drawable/recoveryedittexyt"
                        android:fontFamily="@font/arial"
                        android:inputType="numberDecimal"
                        android:paddingLeft="5dp"
                        android:textSize="15dp"></EditText>
                </TableRow>

                <Button
                    android:id="@+id/btnadddepositslip"
                    android:layout_width="200dp"
                    android:layout_height="35dp"
                    android:layout_alignParentTop="true"
                    android:layout_marginTop="130dp"
                    android:background="#720b98"
                    android:fontFamily="@font/arial"
                    android:text="Attach Deposit Slip"
                    android:textAllCaps="false"
                    android:textColor="#FFF"
                    android:textSize="15sp" />

                <ImageView
                    android:id="@+id/imgpicture"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:layout_marginLeft="250dp"
                    android:layout_marginTop="130dp"
                    app:srcCompat="@android:drawable/btn_dialog" />

                <Button
                    android:id="@+id/btnDepositCash"
                    android:layout_width="match_parent"
                    android:layout_height="35dp"
                    android:layout_alignParentTop="true"
                    android:layout_marginTop="250dp"
                    android:background="#720b98"
                    android:fontFamily="@font/arial"
                    android:text="Update Deposit"
                    android:textAllCaps="false"
                    android:textColor="#FFF"
                    android:textSize="15sp" />


            </RelativeLayout>
        </LinearLayout>
    </ScrollView>


</RelativeLayout>