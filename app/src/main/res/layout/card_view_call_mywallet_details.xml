<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="50dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp">

        <TableRow
            android:id="@+id/tabledata"
            android:layout_width="match_parent"
            android:layout_marginTop="5dp"
            android:background="#9c9e8f"
            android:layout_height="30dp">

            <TextView
                android:id="@+id/Txtseralno"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:text="999"
                android:textSize="13dp"
                android:textColor="#FFF"
                android:fontFamily="@font/arial"
                android:textStyle="bold"
                android:gravity="center"
                />

            <TextView
                android:id="@+id/Txtfacilityno"
                android:layout_width="140dp"
                android:layout_height="30dp"
                android:text="AAAAAAAAAAAAAAA"
                android:textSize="13dp"
                android:textColor="#FFF"
                android:layout_marginLeft="3dp"
                android:fontFamily="@font/arial"
                android:textStyle="bold"
                android:gravity="center"
                />

            <TextView
                android:id="@+id/Txtdateptp"
                android:layout_width="80dp"
                android:layout_height="30dp"
                android:text="2021-04-21"
                android:textColor="#FFF"
                android:textSize="13dp"
                android:layout_marginLeft="3dp"
                android:fontFamily="@font/arial"
                android:textStyle="bold"
                android:gravity="center"
                />

            <TextView
                android:id="@+id/txtactioncode"
                android:layout_width="90dp"
                android:layout_height="30dp"
                android:text="001"
                android:textColor="#FFF"
                android:textSize="13dp"
                android:layout_marginLeft="3dp"
                android:fontFamily="@font/arial"
                android:textStyle="bold"
                android:gravity="center"
                />

            <ImageButton
                android:id="@+id/Imginformastion"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_marginTop="2dp"
                android:layout_alignParentBottom="true"
                android:adjustViewBounds="true"
                android:layout_marginLeft="5dp"
                android:background="@drawable/loginimageback"
                android:scaleType="centerInside"
                app:srcCompat="@drawable/icons8_info_96px" />


        </TableRow>
    </RelativeLayout>


</androidx.cardview.widget.CardView>