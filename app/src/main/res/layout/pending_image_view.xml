<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:card_view="http://schemas.android.com/tools"
    android:foreground="?android:selectableItemBackground"
    android:layout_marginTop="5dp"
    android:background="@drawable/edittextdesign"
    app:layout_constraintCircleRadius="10dp"
    android:layout_height="70dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="65dp"
        android:layout_margin="4dp"
        android:background="@drawable/scroolviewdesign"
        android:orientation="vertical">



        <TextView
            android:id="@+id/textview_doctype"
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="3dp"
            android:layout_centerVertical="true"
            android:layout_marginTop="5dp"
            android:fontFamily="@font/arial"
            android:text="Line 2"
            android:textColor="#982c97"
            android:textSize="13dp" />

        <TableRow
            android:id="@+id/tableREMARKS"
            android:layout_width="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginTop="35dp"
            android:layout_height="30dp">

            <ImageButton
                android:id="@+id/imagebtnzoom"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_alignParentBottom="true"
                android:layout_marginRight="8dp"
                android:layout_marginLeft="5dp"
                android:adjustViewBounds="true"
                android:background="@drawable/loginimageback"
                android:scaleType="centerInside"
                app:srcCompat="@drawable/browse_image" />

            <ImageButton
                android:id="@+id/imageBtndelete"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_alignParentBottom="true"
                android:layout_marginRight="8dp"
                android:layout_marginLeft="8dp"
                android:adjustViewBounds="true"
                android:background="@drawable/loginimageback"
                android:scaleType="centerInside"
                app:srcCompat="@drawable/image_delete" />

        </TableRow>



    </RelativeLayout>

</androidx.cardview.widget.CardView>