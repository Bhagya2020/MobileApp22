<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#740966"
    tools:context=".Recovery_Password">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="50dp"
        >

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:src="@drawable/mordnpsicn"
            />

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="395dp"
        android:id="@+id/RelativeError"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="150dp"
        android:layout_height="36dp">

        <TextView
            android:id="@+id/txterrorshow"
            android:layout_width="300dp"
            android:layout_height="48dp"
            android:layout_marginLeft="50dp"
            android:text=""
            android:textColor="#FFF"
            android:textSize="15sp"/>
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_alignBottom="@+id/RelativeError"
        android:layout_marginBottom="40dp"
        android:layout_height="250dp">

        <Switch
            android:id="@+id/remuserid"
            android:layout_width="150dp"
            android:layout_height="30dp"
            android:layout_alignParentTop="true"
            android:layout_centerInParent="true"
            android:layout_marginTop="170dp"
            android:fontFamily="@font/arial"
            android:text="Remembr Me"
            android:textColor="#FFF"
            android:textSize="15dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/imageView8"
            android:layout_width="97dp"
            android:layout_height="25dp"
            android:layout_centerInParent="true"
            android:text="User ID"
            android:textColor="#99A1B3"
            android:fontFamily="@font/poppinsregular"
            android:textSize="18sp"
            android:layout_alignParentTop="true"
            android:layout_marginTop="25dp"/>

        <EditText
            android:id="@+id/txtUSERID"
            android:layout_width="250dp"
            android:layout_height="35dp"
            android:textColor="#AD386D"
            android:textSize="15dp"
            android:paddingLeft="10dp"
            android:gravity="center"
            android:layout_marginTop="55dp"
            android:layout_alignParentTop="true"
            android:layout_centerInParent="true"
            android:background="@drawable/recoverytextview"
            android:text="" />


        <TextView
            android:id="@+id/imageView6"
            android:layout_width="97dp"
            android:layout_height="25dp"
            android:textColor="#99A1B3"
            android:textSize="18sp"
            android:fontFamily="@font/poppinsregular"
            android:layout_alignParentTop="true"
            android:layout_marginTop="95dp"
            android:layout_centerInParent="true"
            android:text="Password"
             />

        <EditText
            android:id="@+id/txtPASSWORD"
            android:layout_width="250dp"
            android:layout_height="35dp"
            android:textColor="#AD386D"
            android:paddingLeft="10dp"
            android:textSize="15dp"
            android:inputType="textPassword"
            android:gravity="center"
            android:layout_marginTop="125dp"
            android:layout_alignParentTop="true"
            android:layout_centerInParent="true"
            android:background="@drawable/recoverytextview"
            android:text="" />


        <Button
            android:id="@+id/btnLOGIN"
            android:layout_width="206dp"
            android:layout_height="40dp"
            android:layout_marginTop="205dp"
            android:background="@drawable/mordenbutton"
            android:fontFamily="@font/poppinsregular"
            android:text="Login"
            android:textSize="15dp"
            android:textColor="#FFF"
            android:layout_centerInParent="true"
            android:textStyle="bold"
            android:layout_alignParentTop="true"
            />

    </RelativeLayout>

    <ImageView
        android:id="@+id/imageView5"
        android:layout_width="match_parent"
        android:layout_height="130dp"
        android:layout_alignParentTop="true"
        android:layout_marginTop="130dp"
        app:srcCompat="@drawable/recoveryhomechart" />

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="match_parent"
        android:layout_height="87dp"
        android:layout_alignParentTop="true"
        android:layout_marginTop="30dp"
        app:srcCompat="@drawable/recoverylogo" />

</RelativeLayout>