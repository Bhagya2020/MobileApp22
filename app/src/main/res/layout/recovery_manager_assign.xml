<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">.


    <RelativeLayout
        android:background="#fff"
        android:layout_width="320dp"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_alignParentTop="true"
            android:textColor="#720b98"
            android:layout_marginTop="25dp"
            android:textStyle="bold"
            android:fontFamily="@font/arial"
            android:background="@drawable/recoveryedittextdesign"
            android:text="Manager Assign"
            android:gravity="center"
            android:textSize="20dp"
            />


        <TextView
            android:layout_width="150dp"
            android:layout_height="30dp"
            android:textSize="15sp"
            android:layout_marginLeft="12dp"
            android:fontFamily="@font/arial"
            android:text="Facility No"
            android:layout_alignParentTop="true"
            android:layout_marginTop="100dp"/>

        <EditText
            android:id="@+id/TxtFacno"
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:textSize="15sp"
            android:focusable="true"
            android:gravity="center"
            android:layout_alignParentTop="true"
            android:layout_marginTop="125dp"
            android:focusableInTouchMode="true"
            android:background="@drawable/recoveryedittexyt"
            android:fontFamily="@font/arial"
            android:layout_marginBottom="5dp"
            />

        <TextView
            android:layout_width="150dp"
            android:layout_height="30dp"
            android:textSize="15sp"
            android:layout_marginLeft="12dp"
            android:fontFamily="@font/arial"
            android:text="Client Name"
            android:layout_alignParentTop="true"
            android:layout_marginTop="170dp"/>

        <EditText
            android:id="@+id/Txtclname"
            android:layout_width="390dp"
            android:layout_height="35dp"
            android:gravity="center"
            android:textSize="15sp"
            android:focusable="true"
            android:layout_alignParentTop="true"
            android:layout_marginTop="195dp"
            android:focusableInTouchMode="true"
            android:background="@drawable/recoveryedittexyt"
            android:layout_marginLeft="10dp"
            android:fontFamily="@font/arial"
            android:layout_marginBottom="5dp"
            />


        <TextView
            android:layout_width="150dp"
            android:layout_height="30dp"
            android:textSize="15sp"
            android:layout_marginLeft="12dp"
            android:fontFamily="@font/arial"
            android:text="Assign Manager"
            android:layout_alignParentTop="true"
            android:layout_marginTop="240dp"/>

        <Spinner
            android:id="@+id/spnMangerCode"
            android:layout_width="390dp"
            android:layout_height="35dp"
            android:layout_alignParentTop="true"
            android:layout_marginTop="265dp"
            android:layout_marginLeft="10dp"
            android:background="@drawable/recoveryedittexyt"
            android:fontFamily="serif-monospace"
            android:textColor="#9D9BA2"
            android:textStyle="bold">
        </Spinner>

        <TextView
            android:layout_width="150dp"
            android:layout_height="30dp"
            android:textSize="15sp"
            android:layout_marginLeft="12dp"
            android:fontFamily="@font/arial"
            android:layout_alignParentTop="true"
            android:text="Reason for Assign"
            android:layout_marginTop="310dp"/>

        <EditText
            android:id="@+id/TxtResonAssign"
            android:layout_width="390dp"
            android:layout_height="35dp"
            android:layout_alignParentTop="true"
            android:layout_marginTop="335dp"
            android:layout_marginLeft="10dp"
            android:background="@drawable/recoveryedittexyt"
            android:fontFamily="serif-monospace"
            android:textColor="#9D9BA2"
            android:textStyle="bold">
        </EditText>

        <TextView
            android:layout_width="150dp"
            android:layout_height="30dp"
            android:textSize="15sp"
            android:layout_marginLeft="12dp"
            android:fontFamily="@font/arial"
            android:layout_alignParentTop="true"
            android:text="Comment"
            android:layout_marginTop="380dp"/>

        <EditText
            android:id="@+id/TxtManagerComment"
            android:layout_width="390dp"
            android:layout_height="75dp"
            android:textSize="15sp"
            android:focusable="true"
            android:layout_alignParentTop="true"
            android:layout_marginTop="405dp"
            android:focusableInTouchMode="true"
            android:background="@drawable/recoveryedittexyt"
            android:layout_marginLeft="10dp"
            android:fontFamily="@font/arial"
            android:layout_marginBottom="5dp"
            />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="20dp"
            >

            <Button
                android:id="@+id/btnLock"
                android:layout_width="150dp"
                android:layout_height="40dp"
                android:layout_alignParentTop="true"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="5dp"
                android:background="#720b98"
                android:fontFamily="@font/arial"
                android:text="Draft"
                android:textAllCaps="false"
                android:textColor="#FFF"
                android:textSize="15sp" />

            <Button
                android:id="@+id/btnsubmit"
                android:layout_width="150dp"
                android:layout_height="40dp"
                android:layout_marginLeft="190dp"
                android:layout_alignParentTop="true"
                android:layout_marginTop="5dp"
                android:background="#720b98"
                android:textAllCaps="false"
                android:text="Submit"
                android:textSize="15sp"
                android:fontFamily="@font/arial"
                android:textColor="#FFF"
                />


        </RelativeLayout>

    </RelativeLayout>

</LinearLayout>