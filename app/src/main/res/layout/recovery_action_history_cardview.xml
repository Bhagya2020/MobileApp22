<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="135dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="130dp"
        android:background="@drawable/recovery_recycle_design">


        <TextView
            android:layout_width="100dp"
            android:layout_height="30dp"
            android:text="Action Date"
            android:textSize="15dp"
            android:textStyle="bold"
            android:fontFamily="@font/arial"
            android:textColor="#740966"
            android:gravity="center"
            />

        <TextView
            android:id="@+id/TxtActionDate"
            android:layout_width="260dp"
            android:layout_height="30dp"
            android:text="25/02/2020"
            android:fontFamily="@font/arial"
            android:textSize="15dp"
            android:gravity="center_vertical"
            android:textColor="#740966"
            android:layout_marginLeft="130dp"
            />


        <TextView
            android:layout_width="100dp"
            android:layout_height="30dp"
            android:text="Action Officer"
            android:textSize="15dp"
            android:fontFamily="@font/arial"
            android:layout_marginTop="32dp"
            android:textStyle="bold"
            android:textColor="#740966"
            android:gravity="center"
            />

        <TextView
            android:id="@+id/TxtActionOfficer"
            android:layout_width="260dp"
            android:layout_height="30dp"
            android:text="bhagya Neranjana"
            android:fontFamily="@font/arial"
            android:textSize="15dp"
            android:gravity="center_vertical"
            android:layout_marginTop="32dp"
            android:textColor="#740966"
            android:layout_marginLeft="130dp"
            />

        <TextView
            android:layout_width="100dp"
            android:layout_height="30dp"
            android:text="Action Code"
            android:textSize="15dp"
            android:layout_marginTop="64dp"
            android:fontFamily="@font/arial"
            android:textStyle="bold"
            android:textColor="#740966"
            android:gravity="center"
            />

        <TextView
            android:id="@+id/TxtActionCode"
            android:layout_width="260dp"
            android:layout_height="30dp"
            android:text="bhagya Neranjana"
            android:textSize="15dp"
            android:fontFamily="@font/arial"
            android:gravity="center_vertical"
            android:layout_marginTop="64dp"
            android:textColor="#740966"
            android:layout_marginLeft="130dp"
            />

        <TextView
            android:layout_width="100dp"
            android:layout_height="30dp"
            android:text="comment"
            android:textSize="15dp"
            android:layout_marginTop="96dp"
            android:textStyle="bold"
            android:fontFamily="@font/arial"
            android:textColor="#740966"
            android:gravity="center"
            />

        <TextView
            android:id="@+id/TxtActionComment"
            android:layout_width="260dp"
            android:layout_height="30dp"
            android:text="bhagya Neranjana"
            android:textSize="15dp"
            android:gravity="center_vertical"
            android:layout_marginTop="96dp"
            android:textColor="#740966"
            android:fontFamily="@font/arial"
            android:layout_marginLeft="130dp"
            />




    </RelativeLayout>
</androidx.cardview.widget.CardView>