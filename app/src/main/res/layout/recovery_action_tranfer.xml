<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFF">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/constraintLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/imageView10"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:scaleType="fitXY"
            android:src="@drawable/recoveryhedingmain"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <TextView
                android:id="@+id/textView7"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginBottom="10dp"
                android:fontFamily="@font/arial"
                android:gravity="center_vertical"
                android:text="Recovery Action Transfer"
                android:textColor="#FFFF"
                android:textSize="25dp" />

            <TextView
                android:id="@+id/TxtAssingFacno"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:background="@drawable/recoveryedittextdesign"
                android:fontFamily="@font/arial"
                android:gravity="center_vertical"
                android:paddingLeft="10dp"
                android:paddingEnd="10dp"
                android:text="HLELE19201844788"
                android:textAlignment="center"
                android:textColor="#720b98"
                android:textSize="20sp"
                android:textStyle="bold">

            </TextView>
        </LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/constraintLayout">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="10dp"
                android:paddingRight="10dp">

                <Button
                    android:id="@+id/btnMnagerTranfer"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:background="#720b98"
                    android:fontFamily="@font/arial"
                    android:text="Manager Assign"
                    android:textAllCaps="false"
                    android:textColor="#FFF"
                    android:textStyle="bold" />


                <Button
                    android:id="@+id/btnRepocess"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_alignParentTop="true"
                    android:layout_marginTop="60dp"
                    android:background="#720b98"
                    android:fontFamily="@font/arial"
                    android:text="Repossess Action"
                    android:textAllCaps="false"
                    android:textColor="#FFF"
                    android:textStyle="bold" />

                <Button
                    android:id="@+id/btnActionHistry"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_alignParentTop="true"
                    android:layout_marginTop="120dp"
                    android:background="#720b98"
                    android:fontFamily="@font/arial"
                    android:text="Action History"
                    android:textAllCaps="false"
                    android:textColor="#FFF"
                    android:textStyle="bold" />

                <Button
                    android:id="@+id/btnYardAction"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_alignParentTop="true"
                    android:layout_marginTop="180dp"
                    android:background="#db8700"
                    android:fontFamily="@font/arial"
                    android:text="Yard Vehicle"
                    android:textAllCaps="false"
                    android:textColor="#FFF"
                    android:textStyle="bold" />

                <Button
                    android:id="@+id/btnSerchOnline"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_alignParentTop="true"
                    android:layout_marginTop="240dp"
                    android:background="#db8700"
                    android:fontFamily="@font/arial"
                    android:text="Search Online Facility"
                    android:textAllCaps="false"
                    android:textColor="#FFF"
                    android:textStyle="bold" />

                <Button
                    android:id="@+id/btnRequestFacility"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_alignParentTop="true"
                    android:layout_marginTop="300dp"
                    android:background="#db8700"
                    android:fontFamily="@font/arial"
                    android:text="Request Manager Responces"
                    android:textAllCaps="false"
                    android:textColor="#FFF"
                    android:textStyle="bold" />

                <Button
                    android:id="@+id/btnRecoveryVistPlan"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_alignParentTop="true"
                    android:layout_marginTop="360dp"
                    android:background="#db8700"
                    android:fontFamily="@font/arial"
                    android:text="My Visit Plan"
                    android:textAllCaps="false"
                    android:textColor="#FFF"
                    android:textStyle="bold" />

                <Button
                    android:id="@+id/btnRecoveryDistance"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_alignParentTop="true"
                    android:layout_marginTop="420dp"
                    android:background="#db8700"
                    android:fontFamily="@font/arial"
                    android:text="Visit Distance"
                    android:textAllCaps="false"
                    android:textColor="#FFF"
                    android:textStyle="bold" />

                <Button
                    android:id="@+id/btncallcenter"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_alignParentTop="true"
                    android:layout_marginTop="480dp"
                    android:background="#822647"
                    android:fontFamily="@font/arial"
                    android:text="Call Center Action Review"
                    android:textAllCaps="false"
                    android:textColor="#FFF"
                    android:textStyle="bold" />

            </RelativeLayout>
        </LinearLayout>
    </ScrollView>


</androidx.constraintlayout.widget.ConstraintLayout>
