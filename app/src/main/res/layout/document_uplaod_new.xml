<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/imageView10"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:scaleType="fitXY"
        android:src="@drawable/hedingdesign"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginLeft="10dp"
        android:fontFamily="@font/arial"
        android:gravity="center_vertical"
        android:text="DOCUMENTS DETAILS"
        android:textColor="#FFFF"
        android:textSize="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/imageView10"
        app:layout_constraintTop_toTopOf="parent" />

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:layout_marginTop="64dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/txtAPPNO"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:background="@drawable/edittextdesign"
            android:fontFamily="@font/arial"
            android:gravity="center"
            android:textAppearance="@style/TextAppearance.AppCompat.Display4"
            android:textColor="#AD386D"
            android:textSize="15dp" />
    </TableRow>




    <TableRow
        android:id="@+id/tableRow5"
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:layout_marginTop="100dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/textView25"
            android:layout_width="100dp"
            android:layout_height="30dp"
            android:layout_marginStart="5dp"
            android:layout_marginLeft="3dp"
            android:background="@drawable/fildesign"
            android:fontFamily="@font/arial"
            android:gravity="center_vertical"
            android:paddingLeft="10dp"
            android:text="REFERENCE"
            android:textColor="#FFF"
            android:textSize="13dp"
            app:textAllCaps="true" />

        <com.toptoche.searchablespinnerlibrary.SearchableSpinner
            android:id="@+id/spnDOCREFERANCE"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_marginStart="3dp"
            android:layout_marginLeft="3dp"
            android:background="@drawable/edittextdesign"
            android:fontFamily="@font/arial"
            android:textColor="#9D9BA2"
            android:textStyle="bold">

        </com.toptoche.searchablespinnerlibrary.SearchableSpinner>
    </TableRow>


    <TableRow
        android:id="@+id/tableREMARKS"
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:layout_marginTop="140dp"
        app:layout_constraintTop_toTopOf="parent"
        tools:layout_editor_absoluteX="0dp">

        <TextView
            android:id="@+id/textView30"
            android:layout_width="100dp"
            android:layout_height="30dp"
            android:layout_marginStart="5dp"
            android:layout_marginLeft="5dp"
            android:background="@drawable/fildesign"
            android:fontFamily="@font/arial"
            android:gravity="center_vertical"
            android:paddingLeft="10dp"
            android:text="Remarks"
            android:textColor="#FFF"
            android:textSize="13dp"
            app:textAllCaps="true" />

        <EditText
            android:id="@+id/txtmeremarks"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_marginLeft="3dp"
            android:background="@drawable/edittextdesign"
            android:fontFamily="serif-monospace"
            android:paddingLeft="5dp"
            android:textColor="#9D9BA2"
            android:textSize="15sp"
            android:textStyle="bold" />
    </TableRow>

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:layout_marginTop="185dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <Button
            android:id="@+id/btnBROWSE"
            android:layout_width="130dp"
            android:layout_height="30dp"
            android:layout_marginLeft="5dp"
            android:background="@drawable/normalbutton"
            android:fontFamily="@font/arial"
            android:foreground="?android:attr/selectableItemBackground"
            android:gravity="center"
            android:text="BROWSE"
            android:textColor="#FAF7FA"
            android:textSize="15dp"
            app:layout_constraintVertical_bias="0.986" />

        <Button
            android:id="@+id/btnTAKEIMAGE"
            android:layout_width="130dp"
            android:layout_height="30dp"
            android:layout_marginLeft="5dp"
            android:background="@drawable/normalbutton"
            android:fontFamily="@font/arial"
            android:foreground="?android:attr/selectableItemBackground"
            android:gravity="center"
            android:text="capture"
            android:textColor="#FAF7FA"
            android:textSize="15dp" />

        <Button
            android:id="@+id/btnUPLOAD"
            android:layout_width="130dp"
            android:layout_height="30dp"
            android:layout_marginLeft="5dp"
            android:background="@drawable/normalbutton"
            android:fontFamily="@font/arial"
            android:foreground="?android:attr/selectableItemBackground"
            android:gravity="center"
            android:text="UPLOAD"
            android:textColor="#FAF7FA"
            android:textSize="15dp"
            app:layout_constraintVertical_bias="0.986" />


    </TableRow>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/Rec_doc_type"
        android:layout_width="410dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="232dp"
        android:background="@drawable/edittextdesign"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


</androidx.constraintlayout.widget.ConstraintLayout>